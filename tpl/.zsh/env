# Spaceship config
SPACESHIP_PROMPT_ORDER=(
  user          # Username section
  host          # Hostname section
  dir           # Current directory section
  git           # Git section (git_branch + git_status)
  package       # Package version
  node          # Node.js section
  ruby          # Ruby section
  php           # PHP section
  docker        # Docker section
  line_sep      # Line break
  jobs          # Background jobs indicator
  char          # Prompt character
)
SPACESHIP_RPROMPT_ORDER=(
  time          # Time stamps section
)

SPACESHIP_PROMPT_DEFAULT_PREFIX='| '

SPACESHIP_CHAR_SYMBOL='ϟ '
SPACESHIP_CHAR_SYMBOL_ROOT='›'
SPACESHIP_CHAR_SYMBOL_SECONDARY=' ϟ '
SPACESHIP_CHAR_COLOR_SUCCESS=15
SPACESHIP_CHAR_COLOR_FAILURE=$SPACESHIP_CHAR_COLOR_SUCCESS
SPACESHIP_CHAR_COLOR_SECONDARY=7

SPACESHIP_USER_SHOW=always
SPACESHIP_USER_SUFFIX=''
SPACESHIP_USER_COLOR=13

SPACESHIP_HOST_SHOW=always
SPACESHIP_HOST_PREFIX='%F{7}@%f'
SPACESHIP_HOST_SUFFIX='%F{7}:%f '
